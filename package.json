{
  "name": "jsybuben",
  "version": "0.1.0",
  "description": "A tool for writing text in Armenian alphabet(aybuben) ",
  "main": "src/core/api.js",
  "scripts": {
    "genconv": "pegjs -o src/core/converter.js src/peg/converter.pegjs",
    "gencoll": "pegjs -o src/core/collector.js src/peg/collector.pegjs",
    "pretest": "npm run genconv & npm run gencoll",
    "test": "jest --verbose test",
    "prebrowserify": "test -d dist || mkdir -p dist/client/lib/jsybuben",
    "browserify": "browserify -o dist/lib/client/jsybuben/jsybuben.js -s jsybuben src/core/api.js",
    "posttest": "npm run browserify"
  },
  "author": "ohmin839",
  "license": "ISC",
  "dependencies": {
    "dijit": "^1.17.2",
    "dojo": "^1.17.2",
    "dojox": "^1.17.2",
    "leaflet": "^1.8.0"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "gulp": "^4.0.2",
    "jest": "^28.1.3",
    "pegjs": "^0.10.0"
  }
}
